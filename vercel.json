{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/socket.io/(.*)",
      "dest": "https://your-socket-server.vercel.app/socket.io/$1",
      "headers": {
        "upgrade": "websocket"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/app.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
